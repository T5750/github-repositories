            <!--</webApp>-->
            <!--<httpConnector>-->
            <!--<port>${server.port}</port>-->
            <!--</httpConnector>-->
            <!--</configuration>-->
            <!--</plugin>-->
        </plugins>
        <resources>
            <!-- Intellij idea兼容 -->
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>

            <resource>
                <directory>src/main/resources</directory>
                <!-- 过滤替换配置文件变量 -->
                <filtering>true</filtering>
            </resource>

            <!-- 环境配置文件 -->
            <resource>
                <directory>deploy/${env}</directory>
            </resource>
        </resources>
    </build>

