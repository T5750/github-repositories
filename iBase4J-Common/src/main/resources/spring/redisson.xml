<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:c="http://www.springframework.org/schema/c"
	xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd  
       http://www.springframework.org/schema/context  
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	<bean id="redissonClient" class="top.ibase4j.core.support.cache.redisson.Client">
		<property name="password" value="${redis.password}" />
		<!-- SingleServer -->
		<property name="address" value="redis://${redis.host}:${redis.port}" />
		<!-- ClusterServers -->
		<property name="nodeAddresses" value="${spring.redis.cluster.nodes}}" />
		<!-- MasterSlaveServers -->
		<property name="masterAddress" value="${redis.master}" />
		<property name="slaveAddresses" value="${redis.slave}" />
	</bean>
	<bean class="top.ibase4j.core.support.cache.RedissonHelper"
		p:client-ref="redissonClient" />
</beans>